{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "~demo/*": ["./src/*"],
      "~eldrum/*": ["../src/*"],
      "@actnone/eldrum-engine/*": ["../src/*"]
    },
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es2020"],
    "moduleResolution": "nodenext",
    "module": "NodeNext",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "experimentalDecorators": true,
    "useDefineForClassFields": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$"
  ]
}
